<div>
    {# Formater une date #}
    {% set anneeEnCours = 'année en cours : ' %}
    <div>{{anneeEnCours}}{{ "now" | date("Y") }}</div>

    {# Afficher une variable #}
    {% set name = "Sydney" %}
    <h2>{{ name }} : {{ name|length }}</h2>

    {# Créer un tableau #}
    {% set colors = ["orange","brown","blue","turquoise"] %}
    <div> nombre de couleurs : {{colors|length}} </div>
    <div> Liste des couleurs : {{colors|join("/")}} </div>
    {% for color in colors%}
        <div style="background-color: {{ color }}">{{ loop.index }}</div>
        <div style="background-color: {{ color }}">{{ color }}</div>
        {% if loop.last %}
        <div style="background-color: {{ color }}">{{ "Cette couleur est la dernière du tableau" }}</div>
        {% endif %}
    {% endfor %}

    {# Un objet #}
    {% set book = {
    title:"Pifpaf",
    year : 2000,
    author : "John Doe"}
%}
    <h3>{{ book.author }}</h3>
    <div>
        {% for key, val in book %}
        <p>{{ key }} : {{ val }}</p>
        {% endfor %}
    </div>
</div>





